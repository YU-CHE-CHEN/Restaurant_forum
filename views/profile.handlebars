<div class="row">
  <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
  <div class="col-md-4">
    <br>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <h3 class="card-text">{{user.email}}</h3>
        {{#ifCond user.id user.id}}
        <p><a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a></p>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>